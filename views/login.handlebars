    <div class="container primary has-text-centered box mt-6 ">
        <div class="columns is-tablet is-centered">
            <div class="column is-5 m-5" id="login">
                <form class="login-form">
                    <h1 class="is-size-1 has-text-centered">Sign In</h1>
                    <div class="field ">
                        <label class="label" for="username-login">Username:</label>
                        <input class="input form-input" type="text" id="username-login" />
                    </div>
                    <div class="field ">
                        <label class="label" for="password-login">Password:</label>
                        <input class="input form-input" type="password" id="password-login" />
                    </div>
                    <div class="control ">
                        <button class="secondary button is-fullwidth" type="submit">Sign In</button>
                    </div>
                </form>
            </div>
            <div class="column is-5 m-5" id="signup">
                <form class="signup-form">
                    <h1 class="is-size-1 has-text-centered ">Sign Up</h1>
                    <div class="field ">
                        <label class="label" for="username-signup">Username:</label>
                        <input class="input form-input" type="text" id="username-signup" />
                    </div>
                    <div class="field ">
                        <label class="label" for="email-signup">Email:</label>
                        <input class="input form-input" type="text" id="email-signup" />
                    </div>
                    <div class="field ">
                        <label class="label" for="password-signup">Password:</label>
                        <input class="input form-input" type="password" id="password-signup" />
                    </div>
                    <div class="control">
                        <button class="secondary button is-fullwidth" type="submit">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
