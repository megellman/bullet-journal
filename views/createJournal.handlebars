<div class="columns is-centered is-mobile">
    <div class="column is-three-fifths">
        <form id="newJournal">
            <div class="field">
                <label for="title" class="label">New Journal Title</label>
                <div class="control">
                    <input id="title" class="input" type="text" placeholder="Title">
                </div>
            </div>

            <div class="field">
                <label for="description" class="label">New Journal Description</label>
                <div class="control">
                    <textarea id="description" class="textarea is-large" placeholder="A journal about..."></textarea>
                </div>
            </div>
            <div class="field">
            <label for="background-color">Choose a background color:</label>
            <select name="background-color" id="background-color">
                <option value="green">green</option>
                <option value="red">red</option>
                <option value="blue">blue</option>
                <option value="pink">pink</option>
                <option value="purple">purple</option>
            </select>
            </div>
        </form>
    </div>
</div>

<script src="/public/js/createJournal.js"></script>