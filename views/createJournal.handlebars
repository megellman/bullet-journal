<div class="columns is-centered is-mobile">
    <div class="column is-three-fifths">
        <form id="newJournal">
            <div class="field">
                <label for="title" class="label">New Journal Title</label>
                <div class="control">
                    <input id="title" class="input" type="text"
                        placeholder="Title" />
                </div>
            </div>

            <div class="field">
                <label for="description" class="label">New Journal
                    Description</label>
                <div class="control">
                    <textarea id="description" class="textarea is-large"
                        placeholder="A journal about..."></textarea>
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input type="submit" id="create-journal-button" class="button is-primary-dark is-outline" value="Create" />
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/js/createJournal.js"></script>