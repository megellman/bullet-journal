<div class="column  is-half-tablet is-one-quarter-widescreen">
    <a href="/journals/{{id}}">
     
        <div class="box journals {{background}}-notebook has-text-centered">

             <div class="update-holder field buttons is-right">
                <p class="control">
                    <button data-id="{{id}}" class="button update updateJournalButton is-info is-light">
                        <span class="icon is-small">
                            <i data-id="{{id}}" class="fa-solid fa-pencil"></i>
                        </span>
                    </button>
                </p>
                <p class="control">
                    <button data-id="{{id}}" class="button update deleteJournalButton is-danger is-light">
                        <span class="icon is-small">
                            <i data-id="{{id}}" class="fa-solid fa-trash-can"></i>
                        </span>
                    </button>
                </p>
            </div>
          
            <p class="title has-text-white ml-5">{{title}}</p>
            <p class="subtitle mt-6 pt-5 has-text-weight-bold">{{description}}</p>

        </div>
    </a>
</div>
